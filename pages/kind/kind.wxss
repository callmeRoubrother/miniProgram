/* pages/kind/kind.wxss */
.tab{
  display: flex;
  margin-top: 100rpx;
  border-top: 1px solid #666;
  border-bottom: 1px solid #666;
}
.tab text{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  border-right: 1px solid #666;
}
.goods{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  flex-flow: wrap;
}
.goods .goods_item{
  width: 49%;
  height: 300rpx;
  overflow: hidden;
  margin-top: 10rpx;
}
.goods .goods_item image{
  width: 100%;
  height: 70%;
}
.goods .goods_item view{
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}
.goods .goods_item view text{
  font-size: 12px;
  color: #666;
}
.goods .goods_item .old_price{
  text-decoration: line-through;
}