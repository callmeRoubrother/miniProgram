.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image{
  height: 100%;
  width: 100%;
}
.more{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.commend{
  border-left: 10rpx solid red;
  padding-left: 10rpx;
}
.cata{
  display: flex;
  justify-content: space-between;
  flex-flow: wrap;
  padding: 0 5px;
}
.cata .cata_item{
  width: 49%;
  height: 200rpx;
  margin-top: 5px;
  overflow: hidden;
  position: relative;
  border-radius: 10px;
}
.cata .cata_item image{
  width: 100%;
  height: 100%;
}
.cata .cata_item .back_dis{
  position: absolute;
  width: 80px;
  height: 82px;
  right: 7px;
  bottom: -51rpx;
  transform: rotate(10deg);
}
.cata .cata_item .discount{
  position: absolute;
  right: 40rpx;
  bottom: 30rpx;
  transform: rotate(10deg);
  font-size: 12px;
  color: red;
}
.static_goodImg{
  width: 100%;
  height: 400rpx;
}
.goods{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  flex-flow: wrap;
}
.goods .goods_item{
  width: 49%;
  height: 300rpx;
  overflow: hidden;
  margin-top: 10rpx;
}
.goods .goods_item image{
  width: 100%;
  height: 70%;
}
.goods .goods_item view{
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}
.goods .goods_item view text{
  font-size: 12px;
  color: #666;
}
.goods .goods_item .old_price{
  text-decoration: line-through;
}